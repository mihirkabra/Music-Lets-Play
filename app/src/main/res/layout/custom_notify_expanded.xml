<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:gravity="center_vertical"
    android:orientation="horizontal">



    <LinearLayout
        android:layout_width="275sp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <TextView
            android:id="@+id/notify_expand_Nme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:gravity="center_vertical"
            android:text="Song Name"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/notify_expand_Artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:gravity="center_vertical"
            android:text="Artist Name"
            android:textColor="#BFffffff"
            android:layout_marginTop="3sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="10sp">
            <Button
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:id="@+id/notify_expand_shuffleBtn"
                android:background="@drawable/button_shuffle_2"
                android:backgroundTint="#FF3600"
                />
            <Button
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:id="@+id/notify_expand_previousBtn"
                android:background="@drawable/button_previous"
                android:layout_marginLeft="20sp"
                />
            <Button
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:id="@+id/notify_expand_playBtn"
                android:background="@drawable/button_play"
                android:layout_marginLeft="10sp"
                />
            <Button
                android:layout_width="40sp"
                android:layout_height="40sp"
                android:id="@+id/notify_expand_nextBtn"
                android:background="@drawable/button_next"
                android:layout_marginLeft="10sp"
                />
            <Button
                android:layout_width="35sp"
                android:layout_height="35sp"
                android:id="@+id/notify_expand_replayBtn"
                android:background="@drawable/button_replay"
                android:layout_marginLeft="20sp"
                android:backgroundTint="#FF3600"
                />

        </LinearLayout>
    </LinearLayout>



    <ImageView
        android:id="@+id/notify_expand_Image"
        android:layout_width="125sp"
        android:layout_height="125sp"
        android:layout_margin="7sp"
        android:src="@drawable/logo"
        android:layout_marginLeft="15sp"/>

</LinearLayout>