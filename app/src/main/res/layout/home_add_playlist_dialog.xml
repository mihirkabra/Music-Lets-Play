<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_margin="20sp"
    app:cardBackgroundColor="#ff0000"
    app:cardCornerRadius="15dp">

    <RelativeLayout
        android:id="@+id/home_dialog_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/home_dialog_close"
            android:layout_width="20sp"
            android:layout_height="20sp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5sp"
            android:layout_marginRight="5sp"
            android:background="@drawable/circle"
            android:gravity="center"
            android:text="X"
            android:textColor="@color/whiteColor"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40sp"
                android:layout_margin="5sp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_filled"
                    android:padding="3sp">

                    <ImageView
                        android:layout_width="36sp"
                        android:layout_height="37.5sp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/colorPrimary"
                        android:src="@drawable/icon_add_playlist_red" />
                </LinearLayout>

                <Space
                    android:layout_width="10sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/font"
                    android:text="Add New Playlist"
                    android:textColor="@color/whiteColor"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <EditText
                android:id="@+id/home_dialog_text"
                android:layout_width="250sp"
                android:layout_height="40sp"
                android:layout_gravity="center"
                android:layout_margin="5sp"
                android:background="@drawable/button_shape"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="@font/font"
                android:gravity="center"
                android:hint="Name the Playlist"
                android:inputType="text"
                android:maxLines="0"
                android:textColor="@color/whiteColor"
                android:textColorHint="#B3FFFFFF" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5sp"
                android:fontFamily="@font/font"
                android:text="Select the Songs"
                android:textColor="@color/whiteColor"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="10">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5sp"
                    android:layout_weight="1.75"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="12sp"
                    app:cardElevation="7sp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/home_dialog_recycler"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="4sp"
                        android:layout_marginBottom="4sp" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8.25"
                    android:gravity="center">

                    <Button
                        android:id="@+id/home_dialog_create_btn"
                        android:layout_width="150sp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/button_shape"
                        android:fontFamily="@font/font"
                        android:gravity="center"
                        android:text="Create  Playlist"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>

</androidx.cardview.widget.CardView>