<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".MusicPlayer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="#000000"
        android:gravity="center"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/songImg"
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:background="#000000"
            android:src="@drawable/player_background" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/songName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:ellipsize="marquee"
                    android:fontFamily="@font/font"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="Song Name"
                    android:textColor="#CCffffff"
                    android:textSize="25sp" />

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="7.5dp" />

                <TextView
                    android:id="@+id/songArtistName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/songName"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/font"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="Artist Name"
                    android:textColor="#66FFFFFF"
                    android:textSize="15sp" />


            </LinearLayout>


            <Button
                android:id="@+id/btnShuffle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="25dp"
                android:background="@drawable/button_shuffle" />

            <ToggleButton
                android:id="@+id/btnRepeat"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:background="@drawable/button_repeat_off"
                android:textOff=""
                android:textOn="" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#000"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:gravity="center"
            android:padding="2dp"
            app:cardBackgroundColor="#CD575757"
            app:cardCornerRadius="15dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnReplay"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/button_replay" />

                    <Button
                        android:id="@+id/btnPrevious"
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_previous" />

                    <Button
                        android:id="@+id/btnPlay"
                        android:layout_width="60dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/button_pause"
                        android:elevation="3dp" />

                    <Button
                        android:id="@+id/btnNext"
                        android:layout_width="50dp"
                        android:layout_height="35dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_next" />

                    <ToggleButton
                        android:id="@+id/btnMute"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginLeft="18dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="18dp"
                        android:layout_marginBottom="5dp"
                        android:background="@drawable/button_mute"
                        android:textOff=""
                        android:textOn="" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="17dp"
                    android:layout_marginBottom="3dp"
                    android:gravity="center"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5">

                        <TextView
                            android:id="@+id/timePlayed"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:gravity="left"
                            android:text="1:00"
                            android:textColor="#CCffffff"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5">

                        <TextView
                            android:id="@+id/timeTotal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right"
                            android:text="1:00"
                            android:textColor="#CCffffff"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <SeekBar
                    android:id="@+id/musicSeekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="14dp"
                    android:elevation="5dp"
                    android:thumb="@drawable/thumb"
                    android:thumbTint="#FF3600" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    
</LinearLayout>